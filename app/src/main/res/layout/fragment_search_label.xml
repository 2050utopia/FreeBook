<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lance.freebook.MVP.Search.Fragment.SearchLabelFragment">
    <com.lance.freebook.Widget.TagCloudView
        android:id="@+id/search_lable_tagcloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tcvItemBorderHorizontal="8dp"
        app:tcvItemBorderVertical="6dp"
        app:tcvBorder="8dp"
        app:tcvTextColor="@color/white"
        app:tcvTextSize="13"
        app:tcvCanTagClick="true">
    </com.lance.freebook.Widget.TagCloudView>
</LinearLayout>
